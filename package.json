{
  "name": "Gamilation",
  "productName": "Gamilation",
  "version": "1.0.0",
  "description": "Gamilation App",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "nseller0329",
    "email": "31457103+nseller0329@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron-webpack-template"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/dashboard/index.html",
                  "js": "./src/dashboard/renderer.js",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/common/preload.js"
                  }
                },
                {
                  "html": "./src/modal/index.html",
                  "js": "./src/modal/renderer.js",
                  "name": "modal",
                  "preload": {
                    "js": "./src/common/preload.js"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "copy-webpack-plugin": "^6.3.2",
    "css-loader": "^4.3.0",
    "electron": "11.2.3",
    "electron-rebuild": "^2.3.5",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0-beta.6",
    "node-loader": "^1.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^10.0.0-rc.0",
    "style-loader": "^1.3.0",
    "underscore": "^1.12.0",
    "underscore-template-loader": "^1.1.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.0",
    "better-sqlite3": "^7.1.2",
    "bootstrap": "^5.0.0-beta2",
    "cross-fetch": "^3.0.6",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0"
  }
}
